CREATE TABLE IF NOT EXISTS Administrativos (
    ID INT PRIMARY KEY,
    Nome VARCHAR(255),
    TipoDePessoa VARCHAR(20),
    Documento VARCHAR(20),
    Endereco VARCHAR(255),
    ComplementoEndereco VARCHAR(100),
    Bairro VARCHAR(100),
    CEP VARCHAR(9),
    Cidade VARCHAR(100),
    Estado VARCHAR(2),
    Telefone VARCHAR(20),
    CodigoSetor INT,
    DataAdmissao DATE,
    DataDesligamento DATE,
    SalarioBruto DECIMAL(10, 2),
    PercentualImpostos DECIMAL(5, 2),
    SalarioLiquidoCalculado DECIMAL(10, 2),
    DataCalculoSalario DATE,
    AjudaCusto DECIMAL(10,2)
);
CREATE TABLE IF NOT EXISTS Operarios (
    ID INT PRIMARY KEY,
    Nome VARCHAR(255),
    TipoDePessoa VARCHAR(20),
    Documento VARCHAR(20),
    Endereco VARCHAR(255),
    ComplementoEndereco VARCHAR(100),
    Bairro VARCHAR(100),
    CEP VARCHAR(9),
    Cidade VARCHAR(100),
    Estado VARCHAR(2),
    Telefone VARCHAR(20),
    CodigoSetor INT,
    DataAdmissao DATE,
    DataDesligamento DATE,
    SalarioBruto DECIMAL(10, 2),
    PercentualImpostos DECIMAL(5, 2),
    SalarioLiquidoCalculado DECIMAL(10, 2),
    DataCalculoSalario DATE,
    ValorMinimoGatilho DECIMAL(10, 2),
    PercentualComissao DECIMAL(5, 2),
    ProducaoMensal DECIMAL(10, 2),
    InformouProducaoMensal BOOLEAN
);

CREATE TABLE IF NOT EXISTS vendedor (
    ID INT NOT NULL AUTO_INCREMENT,
    codigoSetor INT,
    dataAdmissao DATE,
    dataDesligamento DATE,
    salarioBruto DECIMAL(10, 2),
    percentualImpostos DECIMAL(5, 2),
    salarioLiquidoCalculado DECIMAL(10, 2),
    dataCalculoSalario DATETIME,
    Nome VARCHAR(100),
    TipoPessoa VARCHAR(20),
    Documento VARCHAR(20),
    Endereco VARCHAR(255),
    ComplementoEndereco VARCHAR(100),
    Bairro VARCHAR(100),
    CEP VARCHAR(10),
    Cidade VARCHAR(100),
    Estado VARCHAR(20),
    Telefone VARCHAR(20),
    valorMinimoBonus DECIMAL(10, 2),
    percentualPremiacao DECIMAL(5, 2),
    vendasMes DECIMAL(10, 2),
    vendasUltimoMes DECIMAL(10, 2),
    vendasPenultimoMes DECIMAL(10, 2),
    informouVendasMes BOOLEAN,
    PRIMARY KEY (ID)
);